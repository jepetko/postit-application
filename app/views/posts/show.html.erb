<p class="pull-right">
  [<%= link_to 'Edit this post', edit_post_path(@post) %>]
</p>
<p>
    <%= render @post.categories %>
</p>
<%= render 'shared/content_title', title: "You are currently viewing #{link_to @post.title, fix_url(@post.url)}".html_safe %>
<p>
  <%= @post.description %>
</p>
<hr/>
<%= link_to 'go back', posts_path %>

<h5>Create a comment:</h5>
<%= form_for [@post, @comment] do |f| %>
    <%= render 'shared/errors', obj: @comment %>
    <div class="form-group">
        <%= f.text_area :body, rows: 3, class: 'span4' %>
    </div>
    <%= f.submit 'Create comment', class: 'btn btn-primary' %>
<% end %>

<h5>Comments so far:</h5>
<% @post.comments.each do |comment| %>
    <p class="well span8">
      <em>
        "<%=comment.body%>"
      </em>
      <br/>
      <span class="quiet">by</span>
      <%= comment.creator.username %> <small>at <%= fix_date comment.created_at %></small>
    </p>
<% end %>