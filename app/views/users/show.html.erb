<%= render 'shared/content_title', title: "User: #{@user.username}" %>
<div class="well">
  <%= @user.username %>
</div>
<h5><%= @user.username %>'s activity:</h5>

<ul class="nav nav-tabs">
  <li role="presentation" <%= active_for(:posts, params[:tab]) %>>
    <%= link_to "Posts (#{@user.posts.count})", user_path(@user) %>
  </li>
  <li role="presentation" <%= active_for(:comments, params[:tab]) %>>
    <%= link_to "Comments (#{@user.comments.count})", user_path(@user, tab: :comments) %>
  </li>
</ul>

<div class="tab-content">
  <div class="tab-pane active">
    <% if is_path_user_posts?(@user) %>
        <% @user.posts.each do |post| %>
            <%= render 'posts/post', post: post %>
        <% end %>
    <% elsif is_path_user_comments?(@user) %>
        <% @user.comments.each do |comment| %>
            <%= render 'comments/comment', comment: comment, link_to_associated_post: true %>
        <% end %>
    <% end %>
  </div>
</div>
